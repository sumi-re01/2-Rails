<div class="list-wrap">
<% @diaries.each do |diary| %>
  <div class="list-box">
    <%=attachment_image_tag diary, :image, :fill, 200, 200, format: 'jpeg' %>
    <div class="list-comment">
      <span class="list-text"><%= diary.main_text %></span>
      <span class="list-title"><%= link_to diary.title, book_path(diary.id) %></span>
    </div>
  </div>
<% end %>
</div>